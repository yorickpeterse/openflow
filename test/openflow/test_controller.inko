class CycleClock {
  let @index: Int

  fn static new -> CycleClock {
    CycleClock { @index = 0 }
  }
}

impl Clock for CycleClock {
  fn pub mut now -> DateTime {
    let hour = if @index == 0 {
      @index = 1
      23
    } else {
      @index = 0
      14
    }

    DateTime {
      @year = 2023,
      @month = 1,
      @day = 12,
      @hour = hour,
      @minute = 4,
      @second = 2,
      @sub_second = 0.0,
      @utc_offset = 0,
    }
  }
}

